<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/activity_ar"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.ar.ARActivity">

    <FrameLayout
        android:id="@+id/camera_container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/location_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/seekBarDistance"
            android:background="#77FFFFFF"/>

        <ImageView
            android:id="@+id/uma_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:alpha=".9"
            android:minHeight="50dp"
            app:srcCompat="@mipmap/uma_logo"/>

        <TextView
            android:id="@+id/tv_current_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uma_logo"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/gps_is_loading"/>

        <TextView
            android:id="@+id/tv_distance_meters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_current_location"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@+id/imageViewFilter"
            android:gravity="center_vertical"
            android:text="Distance in meters from the places"/>

        <SeekBar
            android:id="@+id/seekBarDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_distance_meters"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@+id/imageViewFilter"
            android:max="7000"
            android:paddingBottom="10dp"/>

        <ImageView
            android:id="@+id/imageViewFilter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/seekBarDistance"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_distance_meters"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            app:srcCompat="@mipmap/ic_filter_on"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        app:srcCompat="@mipmap/arrow_left"/>

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        app:srcCompat="@mipmap/arrow_right"/>

</FrameLayout>
